<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameModeActivity" >

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/o_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" 
        android:background="@drawable/button_create_2x"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/x_button"
        android:layout_below="@+id/x_button"
        android:background="@drawable/button_cancel_2x" />

    <TextView
        android:id="@+id/game_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="30sp"
        android:text="@string/gameMode" />

    <Button
        android:id="@+id/pvp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/game_mode"
        android:layout_marginLeft="34dp"
        android:background="@drawable/pvp_2x" />

    <Button
        android:id="@+id/x_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_button"
        android:layout_alignLeft="@+id/pvp_button"
        android:layout_marginBottom="33dp"
        android:background="@drawable/piecex_2x" />

    <Button
        android:id="@+id/o_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/x_button"
        android:layout_alignBottom="@+id/x_button"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/x_button"
        android:background="@drawable/pieceo_2x" />

    <Button
        android:id="@+id/pve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pvp_button"
        android:layout_alignBottom="@+id/pvp_button"
        android:layout_alignLeft="@+id/o_button"
        android:background="@drawable/pve_2x" />

    <TextView
        android:id="@+id/start_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/x_button"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="@string/startPiece" />

</RelativeLayout>
