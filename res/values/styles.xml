<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GameTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/GameTheme.ActionBar</item>
        <item name="android:windowBackground">@drawable/background_2x</item>
        <item name="android:buttonStyle">@style/GameTheme.customButton</item>
        <item name="android:textColor">#005ca1</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="GameTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#3498DB</item>
    </style>

    <style name="GameTheme.customButton" parent="android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/custom_button</item>
    </style>

</resources>